<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.discussionboard">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.feed.FeedActivity"
            android:parentActivityName=".ui.MenuActivity"/>
        <activity
            android:name=".ui.rest.ProfileActivity"
            android:parentActivityName=".ui.MenuActivity"/>
        <activity
            android:name=".ui.post.ShowPostsDetail"
            android:parentActivityName=".ui.post.ShowPosts" />
        <activity
            android:name=".ui.post.AddPost"
            android:parentActivityName=".ui.post.ShowPosts" />
        <activity
            android:name=".ui.post.ShowPosts"
            android:parentActivityName=".ui.thread.ShowThreads" />
        <activity
            android:name=".ui.thread.AddThread"
            android:parentActivityName=".ui.thread.ShowThreads" />
        <activity
            android:name=".ui.thread.ShowThreads"
            android:parentActivityName=".ui.MenuActivity" />
        <activity android:name=".ui.MenuActivity" />
        <activity
            android:name=".ui.login.RegisterActivity"
            android:parentActivityName=".ui.login.LoginActivity" />
        <activity android:name=".ui.login.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>