<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginEnd="8dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="8dp">

        <TextView
            android:id="@+id/thread_admin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thread"/>

        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/category_admin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/thread_admin_view"
            android:text="Category"/>

        <TextView
            android:id="@+id/submitter_admin_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/category_admin_view"
            android:text="Submitter"/>


    </RelativeLayout>



</androidx.cardview.widget.CardView>